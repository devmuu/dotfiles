    // custom modules
    "custom/clock_sh": {
        "escape": true,
        "exec": "${HOME}/.config/waybar/scripts/clock.sh",
        "format": "{}",
        "on-click": "kill -USR1 $(pgrep clock.sh)"
    },

    "custom/keyboard": {
        "exec": "${HOME}/.config/waybar/scripts/keyboard.sh",
        "format": "{}",
        "interval": 1,
        "on-click": "fcitx5-remote -t"
    },

    "custom/wttr_in": {
        "escape": true,
        "exec": "${HOME}/.config/waybar/scripts/wttr_in.sh",
        "format": "{}",
        "interval": 3600,
        "max-length": 25
    }
}
