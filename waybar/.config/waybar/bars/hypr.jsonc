{
    // configurations
    "layer": "top",
    "position": "top",
    "height": 26,
    "spacing": 18,

    // include modules
    "modules-left": [
        "hyprland/workspaces",
        "tray"
    ],

    "modules-center": [
        "custom/clock_sh",
        "custom/wttr_in"
    ],

    "modules-right": [
        "bluetooth",
        "pulseaudio",
        "backlight",
        "temperature",
        "network",
        "battery",
        "custom/keyboard"
    ],

    // hyprland modules
   "hyprland/window": {
