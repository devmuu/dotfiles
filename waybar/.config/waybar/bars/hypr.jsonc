        "timezone": "America/Sao_Paulo",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },

    "clock#week-day": {
        "locale": "pt_BR",
        "format": "{:%a}"
    },

    "cpu": {
        "format": "{usage}% ï‹›",
